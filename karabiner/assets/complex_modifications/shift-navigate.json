{
  "title": "Change shift to navigation keys when pressed alone",
  "rules": [
    {
      "description": "Change left shift to backwards navigation if pressed alone.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }},
          "to": [
            {
              "key_code": "left_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "open_bracket",
              "modifiers": [
                "left_shift",
                "left_command"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Change right shift to forward navigation if pressed alone.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "optional": [
                "any"
              ]
            }},
          "to": [
            {
              "key_code": "right_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "open_bracket",
              "modifiers": [
                "left_shift",
                "left_command"
              ]
            }
          ],
          "to_if_alone": [
            {
              "key_code": "close_bracket",
              "modifiers": [
                "left_shift",
                "left_command"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Change left control to backwards navigation if pressed alone.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }},
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "open_bracket",
              "modifiers": [
                "left_shift",
                "left_command"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Change right control to forward navigation if pressed alone.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_control",
            "modifiers": {
              "optional": [
                "any"
              ]
            }},
          "to": [
            {
              "key_code": "right_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "close_bracket",
              "modifiers": [
                "left_shift",
                "left_command"
              ]
            }
          ]
        }
      ]
    }
  ]}
